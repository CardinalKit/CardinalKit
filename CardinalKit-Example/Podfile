use_frameworks!
platform :ios, '14.3'

target 'CardinalKit_Example' do
  pod 'CardinalKit', :path => '../'
  
  pod 'ResearchKit', :git => 'https://github.com/CardinalKit/ResearchKit.git', :tag => '2.1.3'
  pod 'Granola', :git => 'https://github.com/CardinalKit/Granola.git', :commit => '9e0b287'
  
  pod 'GoogleSignIn', '~> 6'
  pod 'FBSDKLoginKit', '~> 15'
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
        config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
        config.build_settings['ONLY_ACTIVE_ARCH'] = 'NO'
    end
  end
end
